<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@drawable/splash_screen_background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imvLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:civ_border_width="6dp"
        app:civ_border_color="@color/border"
        android:src="@drawable/calculatorlogo"
        app:layout_constraintBottom_toTopOf="@+id/horizontalGuideline1"
        app:layout_constraintEnd_toStartOf="@+id/verticleGuideline2"
        app:layout_constraintHorizontal_bias="0.378"
        app:layout_constraintStart_toStartOf="@+id/vericalGuideline1"
        app:layout_constraintTop_toTopOf="@+id/horizontalGuideline2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="CalculatorVIP"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        app:layout_constraintEnd_toStartOf="@+id/verticleGuideline2"
        app:layout_constraintStart_toStartOf="@+id/vericalGuideline1"
        app:layout_constraintTop_toBottomOf="@+id/imvLogo" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vericalGuideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticleGuideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintGuide_percent="0.8"
        app:layout_constraintGuide_end="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="380dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGuideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.16" />


</androidx.constraintlayout.widget.ConstraintLayout>